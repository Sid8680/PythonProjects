import urllib.requestimport datetimeimport json
def getMenuBasedonDate(todayV):    todDat = todayV.strftime('%Y'+'/'+ '%m' +'/'+ '%d')        dynLink = "http://fcps.nutrislice.com/menu/api/digest/school/cunningham-park-elementary/menu-type/lunch/date/"+ todDat + "/"    with urllib.request.urlopen(dynLink) as response:                    html = json.loads(response.read())        menuItems = [html['menu_items']]        holidaytext = [html['holiday_text']]        return(holidaytext,menuItems)    
def run():    weekno = datetime.datetime.today().weekday()    htext = getMenuBasedonDate(datetime.date.today())[0]    #mItems = getMenuBasedonDate(datetime.date.today())[1]    if weekno == 5:        print('Today is a Saturday, here is the menu for Monday')        today = datetime.date.today() + datetime.timedelta(days=2)        print("one")            miTems = getMenuBasedonDate(today)[1]    elif weekno ==6:        print('Today is a Sunday, here is the menu for Monday')        today = datetime.date.today() + datetime.timedelta(days=1)        print("two")        miTems = getMenuBasedonDate(today)[1]    elif weekno < 4 and len(str(htext)) > 6:        today = datetime.date.today() + datetime.timedelta(days=1)        miTems = getMenuBasedonDate(today)[1]    elif weekno < 4 and len(str(htext)) == 6:        today = datetime.date.today()        miTems = getMenuBasedonDate(today)[1]    else:        print(weekno)       return(miTems)

